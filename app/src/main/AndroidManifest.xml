<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ministudio.fundsflow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OutlineActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccountAddActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_account_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tag.TagActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_tag"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
